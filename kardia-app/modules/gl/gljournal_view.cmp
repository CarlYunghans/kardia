$Version=2$
gljournal_view "widget/component-decl"
    {
    width=778; height=525;

    ledger "widget/parameter" { type=string; default=null; allowchars="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ"; }

    editor "widget/parameter" { type=object; default=null; }
    acctbal "widget/parameter" { type=object; default=null; }
    viewer "widget/parameter" { type=object; default=null; }

    Browse "widget/component-decl-action" { }
    Browse_cn "widget/connector"
	{
	event = Browse;
	target = gl_osrc;
	action = QueryParam;
	account_code = runclient(:a_account_code);
	cost_center = runclient(:a_cost_center);
	period = runclient(:a_period);
	batch_number = runclient(:a_batch_number);
	journal_number = runclient(:a_journal_number);
	}

    popup_cmp "widget/component"
	{
	mode=dynamic;
	path="/apps/kardia/modules/gl/trx_popup_menu.cmp";
	}

    gl_osrc "widget/osrc"
	{
	account_code "widget/parameter" { type=string; default=null; }
	cost_center "widget/parameter" { type=string; default=null; }
	period "widget/parameter" { type=string; default=null; }
	batch_number "widget/parameter" { type=integer; default=null; }
	journal_number "widget/parameter" { type=integer; default=null; }

	sql = "SELECT a_amount_plus = condition(:t:a_amount > $0, :t:a_amount, null), a_amount_minus = condition(:t:a_amount < $0, :t:a_amount, null), a_cc_disp = '' + :t:a_cost_center + ' - ' + :c:a_cc_desc, a_acct_disp = '' + :t:a_account_code + ' - ' + :a:a_acct_desc, :t:a_account_category, :t:a_ledger_number, :t:a_batch_number, :t:a_journal_number, :t:a_transaction_number, :t:a_period, :t:a_effective_date, :t:a_cost_center, :t:a_account_code, :t:a_posted, :t:a_comment FROM IDENTITY /apps/kardia/data/Kardia_DB/a_transaction/rows t, /apps/kardia/data/Kardia_DB/a_account/rows a, /apps/kardia/data/Kardia_DB/a_cost_center/rows c WHERE :t:a_account_code = :a:a_account_code and :t:a_ledger_number = :a:a_ledger_number and :t:a_cost_center = :c:a_cost_center and :t:a_ledger_number = :c:a_ledger_number and (:parameters:account_code is null or :parameters:account_code = :t:a_account_code) and (:parameters:cost_center is null or :parameters:cost_center = :t:a_cost_center) and (:parameters:period is null or :parameters:period = :t:a_period) and (:parameters:batch_number is null or :parameters:batch_number = :t:a_batch_number) and (:parameters:journal_number is null or :parameters:journal_number = :t:a_journal_number) ORDER BY :t:a_period, :t:a_batch_number, :t:a_journal_number, :t:a_transaction_number";
	//sql = "SELECT a_amount_plus = condition(:t:a_amount > $0, :t:a_amount, null), a_amount_minus = condition(:t:a_amount < $0, :t:a_amount, null), a_cc_disp = '' + :t:a_cost_center + ' - ' + :c:a_cc_desc, a_acct_disp = '' + :t:a_account_code + ' - ' + :a:a_acct_desc, :t:a_account_category, :t:a_ledger_number, :t:a_batch_number, :t:a_journal_number, :t:a_transaction_number, :t:a_period, :t:a_effective_date, :t:a_cost_center, :t:a_account_code, :t:a_amount, :t:a_modified, :t:a_posted, :t:a_corrected, :t:a_correcting, :t:a_transaction_type, :t:a_reconciled, :t:a_postprocessed, :t:a_postprocess_type, :t:a_origin, :t:a_recv_document_id, :t:a_sent_document_id, :t:p_ext_partner_id, :t:p_int_partner_id, :t:a_receipt_sent, :t:a_receipt_desired, :t:a_first_gift, :t:a_gift_type, :t:a_goods_provided, :t:a_gift_received_date, :t:a_gift_postmark_date, :t:a_comment, :t:s_date_created, :t:s_created_by, :t:s_date_modified, :t:s_modified_by FROM IDENTITY /apps/kardia/data/Kardia_DB/a_transaction/rows t, /apps/kardia/data/Kardia_DB/a_account/rows a, /apps/kardia/data/Kardia_DB/a_cost_center/rows c WHERE :t:a_account_code = :a:a_account_code and :t:a_ledger_number = :a:a_ledger_number and :t:a_cost_center = :c:a_cost_center and :t:a_ledger_number = :c:a_ledger_number ORDER BY :t:a_period, :t:a_batch_number, :t:a_journal_number, :t:a_transaction_number";
	replicasize=25;
	readahead=25;
	autoquery=onfirstreveal;

	gl_pane "widget/pane"
	    {
	    x=8;y=8;width=762;height=446;
	    widget_class = "table_bgnd";

	    gl_tbl "widget/table"
		{
		x=0;y=0;width=760;height=444;
		//rowheight = 20;
		rowheight = 18;
		mode=dynamicrow;

		tbl_rclick "widget/connector"
		    {
		    event=RightClick;
		    target=popup_cmp;
		    action=Instantiate;
		    X=runclient(:X);
		    Y=runclient(:Y);

		    osrc = gl_osrc;
		    editor = editor;
		    viewer = viewer;
		    acctbal = acctbal;
		    title = "i18n:GL Transaction";
		    period=runclient(:gl_osrc:a_period);
		    batch=runclient(:gl_osrc:a_batch_number);
		    acct=runclient(:gl_osrc:a_account_code);
		    cc=runclient(:gl_osrc:a_cost_center);
		    jnl=runclient(:gl_osrc:a_journal_number);
		    legacy=runclient(condition(charindex('#', :a_comment) > 0, substring(:a_comment, charindex('#', :a_comment)), null));
		    }

		t_a_posted "widget/table-column" { title="i18n:Post"; fieldname="a_posted"; width=40; type=check; }
		t_a_period "widget/table-column" { title="i18n:Period"; fieldname="a_period"; width=62; }
		t_a_date "widget/table-column" { title="i18n:Date"; fieldname="a_effective_date"; width=56; }
		t_a_bat_num "widget/table-column" { title="i18n:Batch"; fieldname="a_batch_number"; width=56; }
		t_a_jnl_num "widget/table-column" { title="i18n:Jnl"; fieldname="a_journal_number"; width=30; }
		t_a_trx_num "widget/table-column" { title="i18n:Trx"; fieldname="a_transaction_number"; width=30; }
		t_a_costctr "widget/table-column" { title="i18n:Cost Center"; fieldname="a_cc_disp"; width=135; }
		t_a_ctlacct "widget/table-column" { title="i18n:Ctl"; fieldname="a_account_category"; width=30; }
		t_a_acct "widget/table-column" { title="i18n:Account"; fieldname="a_acct_disp"; width=125; }
		t_a_amtp "widget/table-column" { title="i18n:Debit (+)"; fieldname="a_amount_plus"; width=90; align=right; }
		t_a_amtm "widget/table-column" { title="i18n:Credit (-)"; fieldname="a_amount_minus"; width=90; align=right; }
		t_a_comm "widget/table-column" { title="i18n:Comments"; fieldname="a_comment"; width=154; }
		}
	    }

	search_form "widget/form"
	    {
	    allow_nodata = false;
	    allow_modify = false;
	    allow_new = false;
	    allow_view = false;
	    allow_query = true;
	    auto_focus = false;

	    search_hb "widget/vbox"
		{
		x=8; y=462; width=762; height=56; spacing=8;
		column_width=240;
		cellsize=24;

		f_a_period "widget/component" { path="/apps/kardia/modules/base/editbox_tree.cmp"; field=period; text="i18n:Period:"; tooltip="i18n:Period Number"; label_width=70; popup_source = runserver("/apps/kardia/modules/gl/periods.qyt/" + :this:ledger + "/"); popup_text="i18n:Select Period:"; }
		f_a_batch "widget/component" { path="/apps/kardia/modules/base/editbox_tree.cmp"; field=batch_number; text="i18n:Batch:"; tooltip="i18n:Batch Number"; label_width=70; popup_source = runserver("/apps/kardia/modules/gl/batches.qyt/" + :this:ledger + "/"); popup_text="i18n:Select Batch:"; }
		f_a_cost_center "widget/component" { path="/apps/kardia/modules/base/editbox_tree.cmp"; field=cost_center; text="i18n:CostCtr:"; tooltip="i18n:Cost Center Number"; label_width=70; popup_source = runserver("/apps/kardia/modules/gl/costctrs.qyt/" + :this:ledger + "/"); popup_text="i18n:Select Cost Center:"; }
		f_a_account "widget/component" { path="/apps/kardia/modules/base/editbox_tree.cmp"; field=account_code; text="i18n:Account:"; tooltip="i18n:GL Account Code"; label_width=70; popup_source = runserver("/apps/kardia/modules/gl/accounts.qyt/" + :this:ledger + "/"); popup_text="i18n:Select Account:"; }
		find_rec_btn "widget/textbutton"
		    {
		    width=130;
		    text="i18n:Find Records";
		    find_rec_cn1 "widget/connector" { event="Click"; target=search_form; action="QueryExec"; }
		    }
		clear_srch_btn "widget/textbutton"
		    {
		    width=130;
		    text="i18n:Clear Criteria";
		    clear_srch_cn1 "widget/connector" { event="Click"; target=search_form; action="Discard"; }
		    clear_srch_cn2 "widget/connector" { event="Click"; target=search_form; action="QueryExec"; }
		    }
		}

	    fs "widget/formstatus" { x=680; y=462; height=20; width=90; style=largeflat; }
	    }
	}
    dbgwin "widget/component"
	{
	condition=0;
	mode=static;
	x=0;y=0;width=640;height=480;
	multiple_instantiation=no;
	path="/sys/cmp/debugger.cmp";
	}
    }
