$Version=2$
period_one_edit "widget/component-decl"
    {
    width=506;height=373;

    osrc "widget/parameter" { type=object; find_container="widget/osrc"; }
    form "widget/parameter" { type=object; find_container="widget/form"; }

    SetLabel "widget/component-decl-action" { }
    SetLabel_cn "widget/connector"
	{
	target = per_label;
	event = SetLabel;
	action = SetValue;
	Value = runclient(:Value);
	}

    per_table_pane "widget/pane"
	{
	x=0;y=8;width=505; height=170;
	widget_class="group";

	per_table "widget/table"
	    {
	    x=15;y=15;width=474; height=170 - 2 - 25;
	    rowheight = 20;
	    mode=dynamicrow;
	    objectsource = osrc;

	    p_t_number "widget/table-column" { title="i18n:Period"; fieldname="a_period"; width=60; } 
	    p_t_status "widget/table-column" { title="i18n:Status"; fieldname="a_status"; width=50; } 
	    p_t_desc "widget/table-column" { title="i18n:Description"; fieldname="a_period_desc"; width=340; } 
	    }
	}

    per_label_pane "widget/pane"
	{
	x=16;y=0;width=300;
	widget_class="label";
	per_label "widget/label"
	    {
	    x=0;width=298; height=16;
	    value = 'All Periods';
	    widget_class="label";
	    }
	}

    per_vbox_1 "widget/vbox"
	{
	x=0;y=194;height=179;cellsize=20;spacing=4; width=260;

	f_a_period "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_period; text="i18n:Period:"; ctl_type="editbox"; tooltip="i18n:Period ID"; form=form; }
	f_a_parent_period "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_parent_period; text="i18n:Rollup Period:"; ctl_type="editbox"; tooltip="i18n:Period that this period is a part of"; form=form; }
	f_a_per_status "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_status; text="i18n:Status:"; ctl_type="dropdown"; tooltip="i18n:Status"; sql="select :text, :tag from /apps/kardia/data/Kardia_DB/_a_period_status/rows"; form=form; }
	f_a_per_summary "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_summary_only; text="i18n:Summary?"; ctl_type="checkbox"; tooltip="i18n:Period is summary-only"; form=form; }
	f_a_per_desc "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_period_desc; text="i18n:Description:"; ctl_type="editbox"; tooltip="i18n:A short description of this period"; form=form; }
	f_a_per_comment "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_period_comment; text="i18n:Comments:"; ctl_type="textarea"; tooltip="i18n:Comments"; form=form; }
	}
    per_vbox_2 "widget/vbox"
	{
	x=270;y=194;height=179;cellsize=20;spacing=4; width=230;
	f_a_per_start "widget/component" { path="/sys/cmp/smart_field.cmp"; field="a_start_date"; ctl_type=datetime; text="i18n:Start Date:"; form=form; }
	f_a_per_end "widget/component" { path="/sys/cmp/smart_field.cmp"; field="a_end_date"; ctl_type=datetime; text="i18n:End Date:"; form=form; }
	f_a_per_opened "widget/component" { path="/sys/cmp/smart_field.cmp"; field="a_first_opened"; ctl_type=datetime; text="i18n:First Opened:"; form=form; }
	f_a_per_closed "widget/component" { path="/sys/cmp/smart_field.cmp"; field="a_last_closed"; ctl_type=datetime; text="i18n:Last Closed:"; form=form; }
	f_a_per_archived "widget/component" { path="/sys/cmp/smart_field.cmp"; field="a_archived"; ctl_type=datetime; text="i18n:Archived:"; form=form; }
	}
    }
