$Version=2$
costctr_one_edit "widget/component-decl"
    {
    width=506;height=373;

    osrc "widget/parameter" { type=object; find_container="widget/osrc"; }
    form "widget/parameter" { type=object; find_container="widget/form"; }

    SetLabel "widget/component-decl-action" { }
    SetLabel_cn "widget/connector"
	{
	target = cc_label;
	event = SetLabel;
	action = SetValue;
	Value = runclient(:Value);
	}

    cc_table_pane "widget/pane"
	{
	x=0;y=8;width=505; height=170;
	widget_class="group";

	cc_table "widget/table"
	    {
	    x=15;y=15;width=474; height=170 - 2 - 25;
	    rowheight = 20;
	    mode=dynamicrow;
	    objectsource = osrc;

	    c_t_number "widget/table-column" { title="i18n:CostCtr"; fieldname="a_cost_center"; width=60; } 
	    c_t_class "widget/table-column" { title="i18n:Class"; fieldname="a_cost_center_class"; width=50; } 
	    c_t_desc "widget/table-column" { title="i18n:Description"; fieldname="a_cc_desc"; width=340; } 
	    }
	}

    cc_label_pane "widget/pane"
	{
	x=16;y=0;width=300;
	widget_class="label";
	cc_label "widget/label"
	    {
	    x=0;width=298; height=16;
	    value = 'All Cost Centers';
	    widget_class="label";
	    }
	}

    cc_vbox_1 "widget/vbox"
	{
	x=0;y=194;height=179;cellsize=20;spacing=4; width=200;

	f_a_cost_center "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_cost_center; text="i18n:Cost Center:"; ctl_type="editbox"; tooltip="i18n:Cost Center"; form=form; }
	f_a_parent_cost_center "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_parent_cost_center; text="i18n:Rollup CostCtr:"; ctl_type="editbox"; tooltip="i18n:Cost center that this cost center rolls into"; form=form; }
	f_a_cc_class "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_cost_center_class; text="i18n:Costctr Class:"; ctl_type="dropdown"; tooltip="i18n:Class/Category"; sql="select :a_acct_class_desc, :a_cost_center_class from /apps/kardia/data/Kardia_DB/a_cost_center_class/rows"; form=form; }
	f_a_is_posting "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_is_posting; text="i18n:Is Posting:"; ctl_type="checkbox"; tooltip="i18n:Enable posting to this cost center"; form=form; }
	}
    cc_vbox_2 "widget/vbox"
	{
	x=210;y=194;height=179;cellsize=20;spacing=4; width=290;

	f_a_legacy_code "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_legacy_code; text="i18n:Legacy #:"; ctl_type="editbox"; tooltip="i18n:Legacy Cost Ctr from Old System"; form=form; }
	f_a_cc_desc "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_cc_desc; text="i18n:Description:"; ctl_type="editbox"; tooltip="i18n:A short description of this cost center"; form=form; }
	f_a_cc_comment "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_cc_comments; text="i18n:Comments:"; ctl_type="textarea"; tooltip="i18n:Comments"; form=form; }
	}
    }
