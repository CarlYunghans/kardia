// This component is a chat window that allows for the changing of a chat's
// name and inviting more people.
$Version=2$
newchat_window "widget/component-decl"
    {
    height=600; width=800;
    
    chat_id "widget/parameter" {type="integer";}
    
    instantiate_cn "widget/connector" {target=message_list; action="Instantiate"; event="LoadComplete";}
    
    chat_window "widget/childwindow"
        {
        width=300; height=400; x=250; y=100;
        title="Chat";
        toplevel="yes";
        icon="/apps/kardia/images/icons/chat.png";
    
        chat_panel "widget/component"
            {
            path="/apps/kardia/modules/base/newchat_panel.cmp";
            mode="dynamic";
            x=0; y=40; width=280; height=300;
            
            chat_id=runserver(:chat_id);
            } // End message_list
        } // End chat_child_window
    } // End newchat_window