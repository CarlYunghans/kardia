// This proivdes a list of everyone that is on the server.
$Version=2$
decline_chat_confirmation "widget/component-decl"
    {
    width=800; height=600;
    
    // A dialog to ask people if they are sure they want to decline a chat
    decline_confirmation "widget/childwindow"
	{
	chat_name "widget/parameter" {type="string";}
	chat_id "widget/parameter" {type="integer";}
	
	width=200; height=100; x=300; y=250;
	style="dialog";
	modal="yes";
	toplevel="yes";
	title="Decline?";
	
	question "widget/label"
	    {
	    x=5; y=5; width=190; height=35;
	    // TODO Get this fixed, it does not apear to work
	    text=runserver("Are you sure you want to decline chat \"" + chat_name + "\"?");
	    background="/apps/kardia/images/bg/light_bgnd3.jpg";
	    }
	    
	ok_button "widget/textbutton"
	    {
	    y=50; x=105; width=35; height=20;
	    text="OK";
	    }
	    
	cancel_button "widget/textbutton"
	    {
	    y=50; x=140; width=50; height=20;
	    text="Cancel";
	    }
	    
	}
        
    }