$Version=2$
p_person_component "widget/component-decl"
    {
    width=831;height=338;
    sync_osrc "widget/parameter"
        {
	//This osrc is a parameter passed in from the outside
        type=object;
        find_container="widget/osrc";
        }

    Sync "widget/component-decl-action" {  }

    p_person_osrc "widget/osrc"
        {
        sql="SELECT :p_partner_key, :p_previous_surname, :p_date_of_birth, :p_marital_status, :p_academic_title, :s_date_created, :s_created_by, :s_date_modified, :s_modified_by FROM /apps/kardia/data/Kardia_DB/p_person/rows";
        baseobj = "//apps/kardia/data/Kardia_DB/p_person/rows";
        replicasize=6;
        readahead=6;
        //autoquery=onload;
	autoquery=never;
	loc_sync "widget/rule"
	    {
	    ruletype = "osrc_relationship";

	    target = sync_osrc;
	    is_slave = yes;
	    key_1 = p_partner_key;
	    target_key_1 = p_partner_key;
	    revealed_only = yes;
	    }
        ConfirmWindow "widget/childwindow"
            {
            title = "i18n:Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="i18n:Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "i18n:Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "i18n:Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "i18n:Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        p_person_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            p_person_pane "widget/pane"
                {
                x=5;y=5;
                height=123; width=834;
                p_person_vbox "widget/vbox"
                    {
		    x=0;y=0;column_width=230;cellsize=20; spacing=5;
                    height=118;
		    width=832;
                    //p_partner_key_cmp "widget/component" { path="/sys/cmp/smart_field.cmp"; field=p_partner_key; text="partner key"; ctl_type="editbox"; form=p_person_form; tooltip="This is the partner key assigned to each partner. It consists of the fund id followed by a computer generated six digit number."; }
                    p_previous_surname_cmp "widget/component" { path="/sys/cmp/smart_field.cmp"; field=p_previous_surname; text="i18n:Previous Name"; ctl_type="editbox"; form=p_person_form; tooltip="i18n:Maiden name or previous last name" ; }
                    p_date_of_birth_cmp "widget/component" { path="/sys/cmp/smart_field.cmp"; field=p_date_of_birth; text="i18n:Birthday"; ctl_type="datetime"; form=p_person_form; tooltip="i18n:Birthday / Date of Birth" ; }
                    //p_marital_status_cmp "widget/component" { path="/apps/kardia/modules/base/fields/p_person_marital_status.cmp"; field=p_marital_status; text="Marital Status"; form=p_person_form; tooltip="Marital Status:  M=Married S=Single U=Unknown"; }
                    p_marital_status_cmp "widget/component" { path="/sys/cmp/smart_field.cmp"; field=p_marital_status; text="i18n:Marital Status"; ctl_type="dropdown"; form=p_person_form; tooltip=i18n:"Marital Status:  M=Married S=Single U=Unknown"; sql="select :text, :tag from /apps/kardia/data/Kardia_DB/_p_marital_status/rows";}
                    p_academic_title_cmp "widget/component" { path="/sys/cmp/smart_field.cmp"; field=p_academic_title; text="i18n:Academic title"; ctl_type="editbox"; form=p_person_form; tooltip="i18n:Academic title"; }
                    s_date_created_cmp "widget/component" { path="/sys/cmp/smart_field.cmp"; field=s_date_created; text="i18n:date created"; ctl_type="datetime"; type="create"; form=p_person_form; tooltip="i18n:The date the record was created."; }
                    s_created_by_cmp "widget/component" { path="/sys/cmp/smart_field.cmp"; field=s_created_by; text="i18n:created by"; ctl_type="editbox"; type="create"; form=p_person_form; tooltip="i18n:User ID of who created this record."; }
                    s_date_modified_cmp "widget/component" { path="/sys/cmp/smart_field.cmp"; field=s_date_modified; text="i18n:date modified"; ctl_type="datetime"; type="modify"; form=p_person_form; tooltip="i18n:The date the record was modified."; }
                    s_modified_by_cmp "widget/component" { path="/sys/cmp/smart_field.cmp"; field=s_modified_by; text="i18n:modified by"; ctl_type="editbox"; type="modify"; form=p_person_form; tooltip="i18n:User ID of who last modifed this record."; }
                    }
                }
            }
        }
    }
