$Version=2$
whoson_and_tab_menu "widget/component-decl"
    {
    width = 784;
    height = 530;

    sysattr_cmp "widget/component"
	{
        path = "/apps/kardia/modules/base/sysattrs.cmp";
	x=0;y=0;width=234;height=122;
        fl_width=0;
	sysattrs_window = sysattrs_window;
	}
    
    sysattrs_window "widget/childwindow"
	{
	x=181;
	y=104;
	width=422;
	height=322;
	style=dialog;
	modal=yes;
	titlebar=no;
	toplevel=yes;
	visible=no;

	pnHeader "widget/pane"
	    {
	    x=0;y=0;width=420;height=45;
	    style=flat;
	    //bgcolor=white;
	    background="/apps/kardia/images/bg/splash3.png";
	    }
	sysattrs_cmp "widget/component"
	    {
	    x=10;y=50;width=400;height=260;
	    path="/apps/kardia/modules/base/edit_settings.cmp";
	    }
	}
	
    // Other top level windows
    
    // This window creator is passed to the dynamic object so that they will not
    // be destroyed when the statuses refresh
    profile_window "widget/component"
        {
        path="/apps/kardia/modules/base/newchat_profile_window.cmp";
        mode="dynamic";
        multiple_instantiation="yes";
        width=282; height=400; x=100; y=100;
        }
	
    // Window for chats
    chat_window_cmp "widget/component"
	{
	path="/apps/kardia/modules/base/newchat_window.cmp";
	mode=dynamic;
	width=784; height=530;
	multiple_instantiation="yes";
	}

    whoson_cmp "widget/component"
        {
        path = "/apps/kardia/modules/base/whoson.cmp";
        x=0;y=130;width=234;height=400;
        fl_width=0;
        auto_start=1;
	
	profile_window = profile_window;
	chat_window=chat_window_cmp;
        }

    menu_cmp "widget/component"
        {
        x=246;y=0;height=530;width=538;
        path="/apps/kardia/modules/base/tab_menu.cmp";
        }
    }
