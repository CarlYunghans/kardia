	}

    current_box "widget/pane"
	{
	x=163; y=36; width=163; height=570;
	style=flat;
	background="/apps/kardia/images/bg/light_bgnd2.jpg";
	}

    budget_box "widget/pane"
	{
	x=334; y=36; width=93; height=570;
	style=flat;
	background="/apps/kardia/images/bg/light_bgnd2.jpg";
	}

    prev_box "widget/pane"
	{
