$Version=2$
item_types_cmp "widget/component-decl"
    {
    width=778; height=525;

    ledger "widget/parameter" { type=string; default=null; allowchars="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ"; }

    //ttwin "widget/parameter" { type=object; }

    ledger_osrc "widget/osrc"
	{
	l_ledger "widget/parameter" { type=string; default=runserver(:this:ledger); }
	sql = runserver("select * from /apps/kardia/data/Kardia_DB/a_ledger/rows where :a_ledger_number = :parameters:l_ledger");
	baseobj = "/apps/kardia/data/Kardia_DB/a_ledger/rows";
	replicasize=10;
	readahead=5;
	autoquery = onload;
	}

    it_osrc "widget/osrc"
	{
	it_ledger "widget/parameter" { type=string; default=runserver(:this:ledger); }

	sql = "SELECT :it:a_ledger_number, :a_payroll_item_type_code, :a_payroll_item_class_code, :a_ref_account_code, :a_xfer_cost_center, :a_xfer_account_code, :a_state_province, :a_desc, :a_comment, :s_date_created, :s_created_by, :s_date_modified, :s_modified_by, txtit = :a_payroll_item_type_code + ' - ' + :it:a_desc, txtic = :a_payroll_item_class_code + ' - ' + :ic:a_desc, txtac = :a_ref_account_code + ' ' + :a:a_acct_desc  FROM IDENTITY /apps/kardia/data/Kardia_DB/a_payroll_item_type/rows it, /apps/kardia/data/Kardia_DB/a_payroll_item_class/rows ic, /apps/kardia/data/Kardia_DB/a_account/rows a  WHERE :it:a_ledger_number = :parameters:it_ledger and :it:a_payroll_item_class_code = :ic:a_payroll_item_class_code and :it:a_ref_account_code *= :a:a_account_code and :it:a_ledger_number *= :a:a_ledger_number";
	baseobj = "/apps/kardia/data/Kardia_DB/a_payroll_item_type/rows";

	replicasize=50;
	readahead=25;
	autoquery=onfirstreveal;

        ledger_sync "widget/rule"
            {
            ruletype = "osrc_relationship";
            target = ledger_osrc;
            is_slave = yes;
            key_1 = a_ledger_number;
            target_key_1 = a_ledger_number;
	    autoquery = false;
            }

	it_list_pane "widget/pane"
	    {
	    x=8;y=8;width=762;height=310;
	    widget_class = "table_bgnd";

	    batch_list "widget/table"
		{
		x=0;y=0;width=760;height=308;
		rowheight = 18;
		mode=dynamicrow;

		t_typ "widget/table-column" { title="i18n:Line Item Type"; fieldname="txtit"; width=180; }
		t_cls "widget/table-column" { title="i18n:Class"; fieldname="txtic"; width=180; }
		t_acct "widget/table-column" { title="i18n:GL Acct"; fieldname="txtac"; width=180; }
		t_comm "widget/table-column" { title="i18n:Comments"; fieldname="a_comment"; width=180; }
		}
	    }

	it_form "widget/form"
	    {
	    it_ctls "widget/component"
		{
		x=8;y=318;width=762;height=26;
		path = "/sys/cmp/form_controls.cmp";
		deletable = no;
		object_name = "i18n:Line Item Type";
		}

	    it_vbox "widget/vbox"
		{
		x=8;y=352;width=300;height=136;
		spacing=8;
		cellsize=20;

		f_typ "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_payroll_item_type_code; text="i18n:Type Code:"; ctl_type="editbox"; tooltip="i18n:Payroll Line Item Type Code (3 letters)"; label_width=100; empty_desc="i18n:3 or 4 letter unique code"; }
		f_cls "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_payroll_item_class_code; text="i18n:Class:"; ctl_type="dropdown"; tooltip="i18n:Payroll Line Item Class"; label_width=100; sql="select :a_payroll_item_class_code + ' - ' + :a_desc, :a_payroll_item_class_code from /apps/kardia/data/Kardia_DB/a_payroll_item_class/rows order by :a_payroll_item_class_code"; }
		f_desc "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_desc; text="i18n:Descrip:"; ctl_type="editbox"; tooltip="i18n:Item Type Description (appears on payroll screens & reports)"; label_width=100; }
		f_comm "widget/component" { path="/sys/cmp/smart_field.cmp"; field=a_comment; text="i18n:Comment:"; ctl_type="editbox"; tooltip="i18n:Item Type Comments (does not appear on reports, screens, etc.)"; label_width=100; }
		}

	    it_vbox2 "widget/vbox"
		{
		x=316;y=352;width=300;height=136;
		spacing=4;
		cellsize=20;

		acct_pane "widget/pane"
		    {
		    width=300; height=26; style=flat;
		    enabled = runclient(charindex(:it_osrc:a_payroll_item_class_code, "BDEGMNPRTV") > 0);

		    f_a_account_code "widget/component" { x=0;y=0;height=26;width=300; path="/apps/kardia/modules/base/editbox_tree.cmp"; field=a_ref_account_code; text="i18n:Account:"; tooltip="i18n:Account Number"; label_width=100; popup_source = runserver("/apps/kardia/modules/gl/accounts.qyt/" + :this:ledger + "/"); popup_text="i18n:Select Account:"; empty_desc="i18n:Expense or Payable GL Acct"; }
		    }

		cc_xfer_pane "widget/pane"
		    {
		    width=300; height=26; style=flat;
		    enabled = runclient(charindex(:it_osrc:a_payroll_item_class_code, "BMPRV") > 0);

		    f_a_xfer_cc "widget/component" { x=0;y=0;height=26;width=300; path="/apps/kardia/modules/base/editbox_tree.cmp"; field=a_xfer_cost_center; text="i18n:Xfer Costctr:"; tooltip="i18n:Cost Center for inter-fund xfer"; label_width=100; popup_source = runserver("/apps/kardia/modules/gl/costctrs.qyt/" + :this:ledger + "/"); popup_text="i18n:Select Cost Center:"; empty_desc="i18n:Default costctr to transfer TO"; }
		    }

		acct_xfer_pane "widget/pane"
		    {
		    width=300; height=26; style=flat;
		    enabled = runclient(charindex(:it_osrc:a_payroll_item_class_code, "BMPRV") > 0);

		    f_a_xfer_acct"widget/component" { x=0;y=0;height=26;width=300; path="/apps/kardia/modules/base/editbox_tree.cmp"; field=a_xfer_account_code; text="i18n:Xfer Account:"; tooltip="i18n:GL Account for inter-fund xfer"; label_width=100; popup_source = runserver("/apps/kardia/modules/gl/accounts.qyt/" + :this:ledger + "/"); popup_text="i18n:Select Account:"; empty_desc="i18n:GL Acct to transfer TO"; }
		    }

		state_pane "widget/pane"
		    {
		    width=300; height=22; style=flat;
		    enabled = runclient(charindex(:it_osrc:a_payroll_item_class_code, "ET") > 0);

		    f_state "widget/component" { x=1;y=1;height=20;width=298; path="/sys/cmp/smart_field.cmp"; field=a_state_province; text="i18n:State/Prov:"; ctl_type="dropdown"; tooltip="i18n:State or Province (for state tax withholding only)"; label_width=100; sql="select :p_state_code + ' - ' + :p_state_name, :p_state_code from /apps/kardia/data/Kardia_DB/p_zipranges/rows group by :p_state_code"; }
		    }
		}

	    itctl_vbox "widget/vbox"
		{
		x=634; y=352; width=136; height=136;
		spacing=8;
		cellsize=20;

		tt_btn "widget/textbutton" 
		    {
		    width=136;
		    text = "i18n:Edit Tax Table";
		    enabled=runclient(charindex(:it_osrc:a_payroll_item_class_code, "ET") > 0); 

		    tt_click "widget/connector"
			{
			event=Click;
			target=item_types_cmp;
			action=Launch;
			Source=runclient("/apps/kardia/modules/payroll/tax_table.app");
			Width=800;
			Height=600;
			ledger=runclient(:it_osrc:a_ledger_number);
			type_code=runclient(:it_osrc:a_payroll_item_type_code);
			}
		    }

		payees_btn "widget/textbutton"
		    {
		    width=136;
		    text = "i18n:Edit Payees";
		    py_click "widget/connector" { event=Click; target=item_types_cmp; action=Launch; Width=800; Height=600; Source=runclient('/apps/kardia/modules/payroll/pay_detail.app'); ledger=runclient(:it_osrc:a_ledger_number); item_type=runclient(:it_osrc:a_payroll_item_type_code); }
		    }
		}

	    it_rec_info "widget/component"
		{
		x=8;y=497;height=20;width=762;
		path = "/apps/kardia/modules/base/record_metadata_bar.cmp";
		}
	    }
	}
    }
